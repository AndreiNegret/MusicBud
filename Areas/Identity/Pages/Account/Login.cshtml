@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<link href="~/css./login.less" rel="stylesheet" />
<script src="~/js/login.js"></script>
<h1 class="center-text my-3">@ViewData["Title"]</h1>
<section>
    <div class="row d-flex justify-content-center col-12">
        <div class="col-sm-10 col-md-6 col-lg-4 border border-success rounded m-24 mb-5">
            <form id="account" method="post" class="py-5">
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal">Glad to see you again!</h1>
                </div>
                <div class="d-flex justify-content-center">
                    <i class="far fa-surprise" style="font-size:48px;color:#4cff00"></i>
                    <i class="far fa-grin" style="font-size:48px;color:#43dc02"></i>
                    <i class="far fa-meh" style="font-size:48px;color:#a8a7a7"></i>
                    <i class="fas fa-play" style="font-size:48px;color:#303091"></i>
                    <i class="fas fa-music" style="font-size:48px;color:#fc16f1"></i>
                    <i class="far fa-sad-tear" style="font-size:48px;color:#dc803e"></i>
                    <i class="far fa-frown-open" style="font-size:48px;color:#ff6a00"></i>
                    <i class="far fa-angry" style="font-size:48px;color:#ff0000"></i>
                </div>
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Username" class="form-control" placeholder="What should we call you ?" required autofocus />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email address" required autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg login-btn btn-block">Log in</button>
                </div>
                <div class="form-group">
                    <div class="row col-12">
                        <p class="col-12">
                            <a class="text text-sm primary-color" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="col-12">
                            <a class="text text-sm primary-color" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
